<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_margin="5dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="12dp"
    app:cardElevation="3dp"
    app:contentPadding="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/relativeLayout"
        android:layout_width="402dp"
        android:layout_height="319dp"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="@+id/recyclerView">


        <TextView
            android:id="@+id/clothingName_txt"
            android:layout_width="187dp"
            android:layout_height="46dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="48dp"
            android:text="@string/clothingName"
            android:textSize="24sp"
            android:textColor="@color/white"
            app:layout_constraintStart_toEndOf="@+id/itemImage"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/clothingDescription_txt"
            android:layout_width="180dp"
            android:layout_height="47dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="24dp"
            android:text="@string/clothingDescription"
            android:textSize="24sp"
            android:textColor="@color/white"
            app:layout_constraintStart_toEndOf="@+id/itemImage"
            app:layout_constraintTop_toBottomOf="@+id/clothingName_txt" />

        <TextView
            android:id="@+id/clothingColour_txt"
            android:layout_width="180dp"
            android:layout_height="47dp"
            android:layout_marginStart="24dp"
            android:text="Clothing colour"
            android:textSize="24sp"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/itemImage"
            app:layout_constraintTop_toBottomOf="@+id/clothingDescription_txt"
            app:layout_constraintVertical_bias="0.263" />

        <ImageView
            android:id="@+id/itemImage"
            android:layout_width="158dp"
            android:layout_height="165dp"
            android:backgroundTint="@color/rich_blue"
            android:contentDescription="@string/hide_bottom_view_on_scroll_behavior"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>