<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_margin="5dp"
    app:cardBackgroundColor="@color/purple_500"
    app:cardCornerRadius="12dp"
    app:cardElevation="3dp"
    app:contentPadding="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/relativeLayout"
        android:layout_width="1014dp"
        android:layout_height="290dp"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="@+id/recyclerView">

        <EditText
            android:id="@+id/clothingDescription_etxt"
            android:layout_width="259dp"
            android:layout_height="57dp"
            android:layout_marginTop="20dp"
            android:hint="@string/clothing_details_edit_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.507"
            app:layout_constraintStart_toEndOf="@+id/clothingDescription_txt"
            app:layout_constraintTop_toBottomOf="@+id/clothingName_etxt"
            tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck" />

        <EditText
            android:id="@+id/clothingName_etxt"
            android:layout_width="259dp"
            android:layout_height="57dp"
            android:layout_marginTop="28dp"
            android:hint="@string/clothing_name_edit_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.494"
            app:layout_constraintStart_toEndOf="@+id/clothingName_txt"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="SpeakableTextPresentCheck" />

        <EditText
            android:id="@+id/clothingColour_etxt"
            android:layout_width="259dp"
            android:layout_height="57dp"
            android:hint="@string/clothing_name_edit_text"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/clothingColour_txt"
            app:layout_constraintTop_toBottomOf="@+id/clothingDescription_etxt"
            tools:ignore="SpeakableTextPresentCheck" />

        <TextView
            android:id="@+id/clothingName_txt"
            android:layout_width="187dp"
            android:layout_height="46dp"
            android:layout_marginStart="56dp"
            android:layout_marginTop="24dp"
            android:text="@string/clothingName"
            android:textSize="24sp"
            app:layout_constraintStart_toEndOf="@+id/itemImage"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/clothingDescription_txt"
            android:layout_width="180dp"
            android:layout_height="47dp"
            android:layout_marginStart="56dp"
            android:layout_marginTop="32dp"
            android:text="@string/clothingDescription"
            android:textSize="24sp"
            app:layout_constraintStart_toEndOf="@+id/itemImage"
            app:layout_constraintTop_toBottomOf="@+id/clothingName_txt" />

        <TextView
            android:id="@+id/clothingColour_txt"
            android:layout_width="180dp"
            android:layout_height="47dp"
            android:layout_marginStart="56dp"
            android:text="Clothing colour"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/itemImage"
            app:layout_constraintTop_toBottomOf="@+id/clothingDescription_txt"
            app:layout_constraintVertical_bias="0.518" />

        <ImageView
            android:id="@+id/itemImage"
            android:layout_width="235dp"
            android:layout_height="234dp"
            android:contentDescription="@string/hide_bottom_view_on_scroll_behavior"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>